create database bancopov;

use bancopov;

create table usuarios (
id int auto_increment primary key,
nome varchar(300),
login varchar(100) unique key NOT NULL,
senha varchar(100),
tipo integer not null
);

create table salas (
id int auto_increment primary key,
nome varchar(100) unique key not null,
codsala varchar (10) unique key not null,
area varchar(1) not null,
descricao varchar(400) not null
);

